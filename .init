#!/bin/bash

echo 'Cpanel is setting up'

if [ -e ~/cpanel/repository ]
then
  echo 'your repository is ready for work'
else
  echo 'just a minute'
  mkdir ~/cpanel/repository
fi

clear

figlet Cpanel


echo " "
echo "Cpanel is now running..."
echo " "
echo "we can't complete the setup alone without your help, please copy and paste the below commands"
echo " "
echo "________Copy____________"
echo " "
echo 'alias create="bash .panel/create"'
echo 'alias repo="bash .panel/repo"'
echo 'alias init="bash ~/cpanel/.panel/init"'
echo 'alias pull="bash ~/cpanel/.panel/pull"'
echo 'alias delete="bash ~/cpanel/.panel/delete"'
echo 'alias push="bash ~/cpanel/.panel/push"'
echo " "
echo "________________________"